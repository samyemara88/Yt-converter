<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252a30"
    tools:context="com.example.selim_000.ytconvert.MainActivity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="154dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="105dp"
                android:layout_height="75dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@mipmap/image2"
                tools:layout_editor_absoluteX="140dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="355dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Coller l'Url de votre vidéo"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="15dp"
                tools:layout_editor_absoluteY="111dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="100dp">

            <Button
                android:id="@+id/button"
                android:layout_width="124dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="#3d464b"
                android:orientation="vertical"
                android:text="Télecharger"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="130dp"
                tools:layout_editor_absoluteY="219dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="198dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:background="#3d464b"
                android:orientation="vertical"
                android:text="Mes Téléchargements"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="93dp"
                tools:layout_editor_absoluteY="314dp" />


        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>